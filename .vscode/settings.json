{
  "cSpell.words": [
    "Perfix",
    "chmod",
    "cnpm",
    "dicebear",
    "keyscan",
    "mkdir",
    "nestjs",
    "prebuild",
    "slmblog",
    "typegoose",
    "typeorm",
    "wechat"
  ],
  "typescript.tsdk": "node_modules/typescript/lib",
  "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    {
      "language": "vue",
      "autoFix": true
    }
  ],

  "prettier.semi": false,
  "prettier.singleQuote": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2
}